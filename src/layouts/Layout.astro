---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Risedata" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-950 text-neutral-50">
    <slot />
  </body>
</html>

<style is:global>
  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>
