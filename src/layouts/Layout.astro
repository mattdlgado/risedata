---
import Header from "../sections/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Risedata" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-blue text-neutral-50 font-sans text-base leading-loose">
    <Header />
    <slot />
    <script src="../lib/js/animations.js"></script>
  </body>
</html>

<style is:global>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    @apply text-balance;
  }

  p {
    @apply mb-4;
  }

  hr {
    @apply border-neutral-50/50;
  }

  strong {
    @apply bg-red;
  }

  .feah {
    @apply -mt-20;
  }
</style>
