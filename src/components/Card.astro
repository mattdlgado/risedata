---
interface Props {
  id?: string;
  class?: string;
  title: string;
  content: string;
}

const { id, class: customClass, title, content } = Astro.props;
---

<div
  id={id}
  class:list={[
    "border border-neutral-50/10 p-5 backdrop-blur-3xl",
    customClass,
  ]}
>
  <h3 class="text-2xl mb-2">{title}</h3>
  <p class="text-slate-400">
    {content}
  </p>
</div>
