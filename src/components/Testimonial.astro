---
interface Props {
  name: string;
  photo: string;
  content: string;
}

const { name, photo, content } = Astro.props;
---

<div class="swiper-wrapper flex flex-wrap justify-center gap-6">
  <div class="swiper-slide flex flex-col items-center w-64 border border-neutral-50/10 p-5 gap-4">
    <img
      src={photo}
      alt={name}
      class="object-cover w-28 h-28 rounded-full"
    />
    <div class="text-center">
      <h3 class="text-xl font-semibold leading-tight">{name}</h3>
      <p class="text-slate-400 text-sm mt-2">
        {content}
      </p>
    </div>
  </div>
</div>

