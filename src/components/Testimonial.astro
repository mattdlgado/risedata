---
interface Props {
  class?: string;
  name: string;
  photo: string;
  logo: Array<string>;
  content: string;
}

const { class: customClass, name, photo, logo, content } = Astro.props;
---

<div class:list={["p-5 flex-none w-full", customClass]}>
  <div class="flex items-center gap-4">
    <img src={photo} alt={name} width="40" height="40" loading="lazy" />
    <h3 class="text-2xl me-auto">{name}</h3>
    <img src={logo[0]} alt={logo[1]} width="144" height="40" loading="lazy" />
  </div>
  <p class="text-slate-400">
    {content}
  </p>
</div>
